<!DOCTYPE html> 
<html> 
    <head> 
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title> 
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/jquerymobile/css")
        @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
    </head> 
<body> 
    <div data-role="page">
        <div data-role="header" data-position="fixed">
            <h1>@ViewBag.Title</h1>
            <div data-role="navbar">
                <ul>
                    <li>@Html.ActionLink("Startseite", "Index", "Home")</li>
                    <li>@Html.ActionLink("Info", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    <li>@Html.Partial("_ViewSwitcher")</li>
                </ul>
            </div>
        </div>
        <div data-role="content">
            @RenderSection("featured", false)
            @RenderBody()
        </div>
        <div data-role="footer" data-position="fixed">
            <p>&copy; @DateTime.Now.Year - Meine ASP.NET-Anwendung</p>
        </div>
    </div>
</body>
</html>